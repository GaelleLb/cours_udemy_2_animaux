{% extends 'base.html.twig' %}

{% block title %}Continents{% endblock %}

{% block monTitre %}Liste des Continents{% endblock %}

{% block body %}
    {% for continent in continents %}
        <div class="row border-bottom border-info pt-3">
            <div class="col px-5">
                <h2><a href="{{path('continent', {'id' : continent.id})}}">{{ continent.libelle|capitalize}}</a></h2>

                <div class="row">
                    {% for animal in continent.animaux %}
                        <div class="col-6">
                            <div class="row align-items-center">
                                <div class="cole-12 col-md-6 col-lg-2 text-center">
                                    <img class="img-fluide" src="{{ asset('images/' ~ animal.image) }}" alt="">
                                </div>
                                <div class="col text-center">
                                    <h2><a href="{{path('animal',{'id' : animal.id})}}">{{ animal.nom }}</a></h2>
                                    <div>{{ animal.description}}</div>
                                    <div><a href="{{path('famille', {'id' : animal.famille.id})}}" class="btn btn-info mt-2">{{animal.famille.libelle}}</a></div>

                                </div>
                            </div>
                        </div>                   
                            
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
