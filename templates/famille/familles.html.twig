{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}

{% block monTitre %}Liste des Familles{% endblock %}
{% block body %}
    {% for famille in familles %}
    <div class="row border-bottom border-info pt-3">
        <div class="col px-5">
            <h2><a href="{{path('famille', {'id' : famille.id})}}">{{ famille.libelle|capitalize}}</a></h2>
            <div>{{famille.description}}</div>

            <div class="row">
                {% for animal in famille.animaux %}
                    <div class="col-6">
                        <div class="row align-items-center">
                            <div class="cole-12 col-md-6 col-lg-2 text-center">
                                <img class="img-fluide" src="{{ asset('images/' ~ animal.image) }}" alt="">
                            </div>
                            <div class="col text-center">
                                <h2><a href="{{path('animal',{'id' : animal.id})}}">{{ animal.nom }}</a></h2>
                                <div>{{ animal.description}}</div>
                            </div>
                            <div>
                                {% for continent in animal.continents %}
                                    <a href="{{path('continent', {'id' : continent.id})}}" class="btn btn-warning mt-2">{{continent.libelle}}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>                   
                        
                {% endfor %}
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}
