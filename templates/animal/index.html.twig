{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block monTitre %} Liste des animaux{% endblock %}
{% block body %}
    {% for animal in animals %}
    <div class="row align-items-center p-2 m-2">
        <div class="col-2 text-center">
            <img src="{{ asset('images/' ~ animal.image) }}" alt="">
        </div>
        <div class=" offset-1 col-auto">
            <h2><a href="{{path('animal',{'id' : animal.id})}}">{{ animal.nom }}</a></h2>
            <div>{{ animal.description}}</div>
            <div><a href="{{path('famille', {'id' : animal.famille.id})}}" class="btn btn-info mt-2">{{animal.famille.libelle}}</a></div>
        </div>
    </div>
    
    {% endfor %}

{% endblock %}
