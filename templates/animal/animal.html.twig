{% extends 'base.html.twig' %}

{% block title %}Affichage de l'animal{% endblock %}

{% block monTitre %} Découvre le {{animal.nom}}{% endblock %}
{% block body %}
<div class="row align-items-center">
    <div class="col-2 text-center">
        <img src="{{ asset('images/' ~ animal.image) }}" alt="">
    </div>    
    <div class=" offset-1 col-auto">
        <div>Description : {{ animal.description}}</div>
        <div>Poids : {{animal.poids}}</div>
        <div>Dangerosité : 
            {% if animal.dangereux %}
                <span class="badge badge-danger">OUI</span> 
            {% else %}
            <span class="badge badge-success">NON</span> 
            {% endif %}
        </div>
        <div><a href="{{path('famille', {'id' : animal.famille.id})}}" class="btn btn-info mt-2">{{animal.famille.libelle}}</a></div>

    </div>
</div>

{% endblock %}
